<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Order Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    body {
      background-color: #f8f9fa;
    }

    .container {
      padding: 30px 20px;
    }

    h1 {
      color: #2b6cb0;
      font-weight: 600;
    }

    .table {
      background-color: #fff;
      border-radius: 10px;
      overflow: hidden;
    }

    .status-badge {
      padding: 0.35em 0.65em;
      border-radius: 0.5rem;
      font-size: 0.75rem;
      font-weight: 500;
      text-transform: capitalize;
    }

    .status-pending {
      background-color: #fff3cd;
      color: #856404;
    }

    .status-processing {
      background-color: #cce5ff;
      color: #004085;
    }

    .status-shipped {
      background-color: #d1ecf1;
      color: #0c5460;
    }

    .status-completed {
      background-color: #d4edda;
      color: #155724;
    }

    .status-cancelled {
      background-color: #f8d7da;
      color: #721c24;
    }

    .btn-sm {
      font-size: 0.75rem;
    }

    .form-select {
      font-size: 0.85rem;
    }

    .pagination a {
      margin: 0 5px;
      padding: 6px 12px;
      border-radius: 6px;
      color: #2b6cb0;
      text-decoration: none;
      border: 1px solid #2b6cb0;
      font-weight: 500;
    }

    .pagination a.active {
      background-color: #2b6cb0;
      color: #fff !important;
    }

    .pagination a:hover {
      background-color: #2b6cb0;
      color: #fff;
    }

    #toast {
      visibility: hidden;
      position: fixed;
      bottom: 30px;
      right: 30px;
      background-color: #2b6cb0;
      color: white;
      padding: 12px 20px;
      border-radius: 6px;
      box-shadow: 0 0 12px rgba(0, 0, 0, 0.2);
      z-index: 9999;
    }

    #toast.show {
      visibility: visible;
      animation: fadein 0.5s, fadeout 0.5s 2.5s;
    }

    @keyframes fadein {
      from {
        bottom: 0;
        opacity: 0;
      }

      to {
        bottom: 30px;
        opacity: 1;
      }
    }

    @keyframes fadeout {
      from {
        bottom: 30px;
        opacity: 1;
      }

      to {
        bottom: 0;
        opacity: 0;
      }
    }

    @media screen and (max-width: 768px) {
      .table-responsive {
        overflow-x: auto;
      }
    }
  </style>
</head>

<%- include('../partials/admin/leyout.ejs') %>

<body>
  <div class="container">
    <h1 class="mb-4 text-center">Order Management</h1>

    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Email</th>
            <th>Date</th>
            <th>Total</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td>#<%= order._id %></td>
              <td><%= order.userId.firstname %> <%= order.userId.lastname %></td>
              <td><%= order.userId.email %></td>
              <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
              <td>â‚¹<%= order.finalAmount ? order.finalAmount.toFixed(2) : "0.00" %></td>
              <td>
                <span class="status-badge status-<%= order.orderStatus.toLowerCase() %>">
                  <%= order.orderStatus %>
                </span>
              </td>
              <td>
                <select class="form-select mb-2" id="status-<%= order._id %>">
                  <option value="Pending" <%= order.orderStatus==='Pending' ? 'selected' : '' %>>Pending</option>
                  <option value="Processing" <%= order.orderStatus==='Processing' ? 'selected' : '' %>>Processing</option>
                  <option value="Shipped" <%= order.orderStatus==='Shipped' ? 'selected' : '' %>>Shipped</option>
                  <option value="Completed" <%= order.orderStatus==='Completed' ? 'selected' : '' %>>Completed</option>
                  <option value="Cancelled" <%= order.orderStatus==='Cancelled' ? 'selected' : '' %>>Cancelled</option>
                </select>
                <button class="btn btn-primary btn-sm w-100 mb-1" onclick="updateStatus('<%= order._id %>')">Update</button>
                <button class="btn btn-outline-secondary btn-sm w-100" data-bs-toggle="modal" data-bs-target="#orderDetailsModal<%= order._id %>">View Details</button>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Toast -->
    <div id="toast" class="toast">Status updated successfully!</div>

    <!-- Pagination -->
    <div class="pagination d-flex justify-content-center mt-4">
      <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>">Previous</a>
      <% } %>
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
      <% } %>
      <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>">Next</a>
      <% } %>
    </div>
  </div>

    <script>
      function updateStatus(orderId) {
        const select = document.getElementById(`status-${orderId}`);
        const newStatus = select.value;

        fetch('/admin/orders/update-status', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ orderId, orderStatus: newStatus }),
        })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              // Update the status badge without refreshing the page
              const statusBadge = document.querySelector(`#status-${orderId}`).closest('tr').querySelector('.status-badge');
              statusBadge.textContent = newStatus;
              statusBadge.className = `status-badge status-${newStatus.toLowerCase()}`;

              Array.from(select.options).forEach(option => {
                if (option.value === newStatus || option.index < select.selectedIndex) {
                  option.disabled = true;
                }
              });
              // Optional: Show a toast notification for feedback
              const toast = document.getElementById('toast');
              toast.textContent = 'Order status updated successfully!';
              toast.style.display = 'block';
              setTimeout(() => {
                toast.style.display = 'none';
              }, 3000);
            } else {
              alert('Failed to update order status. Please try again.');
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while updating the order status.');
          });
      }
    </script>
  </body>

</html>