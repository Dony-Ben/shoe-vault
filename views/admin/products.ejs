<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Product</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      background-color: #f8f9fa;
    }

    .main-content {
      padding: 30px;
    }

    .card {
      border: none;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .table th {
      background-color: #edf2f7;
      font-weight: 600;
    }

    .table td,
    .table th {
      vertical-align: middle;
    }

    .product-img {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 6px;
    }

    .badge {
      font-size: 0.75rem;
      padding: 0.4em 0.6em;
    }

    .btn-group .btn {
      margin-right: 5px;
    }

    .pagination-container {
      margin-top: 30px;
    }

    .page-link {
      border-radius: 6px;
    }
  </style>
</head>

<body>
  <%- include('../partials/admin/leyout.ejs') %>
  <div class="main-content">
    <div class="card mb-4">
      <div class="card-body">
        <h2 class="card-title text-center mb-4 text-primary">Products</h2>
        <form action="" method="get" class="mb-4">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search products or brands" name="search" />
            <button class="btn btn-primary" type="submit">Search</button>
          </div>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th>Image</th>
                <th>Product</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Available Sizes</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i = data.length - 1; i >= 0; i--) { %>
              <tr>
                <td>
                  <img src="<%= data[i].productImage && data[i].productImage.length > 0 ? data[i].productImage[0] : '/path/to/placeholder.jpg' %>" alt="Product Image" class="product-img" />
                </td>
                <td><%= data[i].productName %></td>
                <td><%= data[i].brands ? data[i].brands.brandName : 'No Brand' %></td>
                <td><%= data[i].category ? data[i].category.name : 'No category' %></td>
                <td>â‚¹<%= data[i].salePrice.toFixed(2) %></td>
                <td><%= data[i].quantity %></td>
                <td>
                  <% if (data[i].sizes && data[i].sizes.length) { %>
                    <%= data[i].sizes.join(', ') %>
                  <% } else { %>
                    <span class="text-muted">No Sizes Available</span>
                  <% } %>
                </td>
                <td>
                  <% if (data[i].isblocked === false) { %>
                    <span class="badge bg-success">Active</span>
                  <% } else { %>
                    <span class="badge bg-danger">Blocked</span>
                  <% } %>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <% if (data[i].isblocked === false) { %>
                      <button onclick="confirmAction('/admin/blockProduct?id=<%= data[i]._id %>', 'block')" class="btn btn-outline-danger btn-sm">Block</button>
                    <% } else { %>
                      <button onclick="confirmAction('/admin/unblockProduct?id=<%= data[i]._id %>', 'unblock')" class="btn btn-outline-success btn-sm">Unblock</button>
                    <% } %>
                    <a href="/admin/editProduct?id=<%= data[i]._id %>" class="btn btn-outline-primary btn-sm">Edit</a>
                  </div>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <nav aria-label="Page navigation" class="pagination-container">
      <ul class="pagination justify-content-center">
        <% if (hasPrevPage) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= prevPage %>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <% if (hasNextPage) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= nextPage %>" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
</body>

</html>

<script>
    function confirmAction(url, action) {
        Swal.fire({
            title: `Are you sure  want to ${action} this product?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            customClass: {
                popup: 'small-swal-popup'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = url;
            }
        });
    }
</script>
<style>
    .small-swal-popup {
        width: 300px !important;
    }
</style>
</body>

</html>