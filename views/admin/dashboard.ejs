    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #000000;
            --secondary-color: #f5f7fa;
            --text-color: #ffffff;
            --sidebar-width: 240px;
        }
        * {
            margin: 0;
            padding: 0;
            color: #ffffff;
            text-decoration: none;
            box-sizing: border-box;
        }
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--secondary-color);
            color: var(--text-color);
        }
        .dashboard {
            display: grid;
            grid-template-columns: var(--sidebar-width) 1fr;
            height: 100vh;
        }
        .sidebar {
            background-color: var(--primary-color);
            color: white;
            padding: 2rem;
            transition: all 0.3s ease;
        }
        .sidebar-header {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 2rem;
        }
        .nav-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            margin-bottom: 0.5rem;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }
        .nav-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        .nav-item i {
            margin-right: 1rem;
        }
        .main-content {
            padding: 2rem;
            overflow-y: auto;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }
        .header h1 {
            font-size: 2rem;
            color: black;
            font-weight: 600;
        }
        .user-info {
            display: flex;
            align-items: center;
        }
        .user-info img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 1rem;
        }
        .widgets {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }
        .widget {
            background-color: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .widget:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }
        .widget h2 {
            font-size: 1.25rem;
            margin-bottom: 1rem;
            color: #000000;
        }
        .widget-value {
            font-size: 2rem;
            font-weight: 600;
            color: var(--primary-color);
        }
    </style>
</head>
<body>
    <div class="dashboard">
        <aside class="sidebar">
            <div class="sidebar-header">AdminPanel</div>
            <nav>
                <div class="nav-item">
                    <a href="/admin/dashboard">
                        <i class="fas fa-home"></i>
                        Dashboard
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/admin/customers">
                        <i class="fas fa-users"></i>
                        Users
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/admin/Category">
                        <i class="fas fa-chart-bar"></i>
                        Category
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/admin/products">
                        <i class="fas fa-cog"></i>
                        products
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/admin/addProducts">
                        <i class="fas fa-cog"></i>
                        Add product
                    </a>
                </div>

                <div class="nav-item">
                    <a href="/admin/brands">
                        <i class="fas fa-users"></i>
                        Brands
                    </a>
                </div>
            </nav>
        </aside>
        <main class="main-content">
            <header class="header">
                <h1>Dashboard</h1>
                <div class="user-info">
                    <img src="/image/profile.jpg">
                    <span style="color:#000000;">ESCOBAR</span>
    <button style="color: red;" onclick="window.location.href='/admin/logout'">Logout</button>
                     

                </div>
            </header>
            <section class="widgets">
                <div class="widget">
                    <a href="/admin/total-users">
                        <h2>Total Users</h2>
                        <div class="widget-value"><%= totalUsers %></div>
                    </a>
                </div>
                <div class="widget">
                    <a href="/admin/revenue">
                        <h2>Revenue</h2>
                    </a>
                </div>
                <div class="widget">
                    <a href="/admin/projects">
                        <h2>Active Projects</h2>
                    </a>
                </div>
                <div class="widget">
                    <a href="/admin/conversion-rate">
                        <h2>Conversion Rate</h2>
                    </a>
                </div>
            </section>
        </main>
    </div>
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
</body>

</html>
