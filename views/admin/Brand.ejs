<link rel="stylesheet" href="/brand-page.css">
<section class="content-main">
    <div class="content-header">
        <h2 class="content-title card-title">Brands</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <!-- Add Brand Form -->
                <div class="col-md-3">
                    <form method="post" action="/admin/addBrand" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label for="name" class="form-label">Brand Name</label>
                            <input type="text" name="name" placeholder="Type here" class="form-control" />
                          </div>
                        <label for="brandImage" class="form-label">Brand Image</label>
                        <div class="upload-area" onclick="document.getElementById('imageUpload').click()">
                            <i class="upload-area-icon fas fa-cloud-upload-alt"></i>
                            <p class="upload-area-text">Drag & Drop to Upload</p>
                            <p class="upload-area-subtext">or click to select a file</p>
                            <input id="imageUpload" class="form-control border" name="image" type="file" />
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-primary mt-20" type="submit">Add Brand</button>
                        </div>
                    </form>
                </div>
                <!-- Brand List -->
                <div class="col-md-7 ml-105">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Brand</th>
                                    <th>Logo</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach((brand) => { %>
                                    <tr>
                                        <td><%= brand.brandName %></td>
                                        <td>
                                            <div class="d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%; overflow: hidden;">
                                              <% if (brand.brandImage) { %>
                                                <img 
                                                  src="/uploads/re-image/<%= brand.brandImage %>" 
                                                  alt="<%= brand.brandName %>" 
                                                  class="img-fluid rounded-circle" 
                                                  style="width: 100%; height: 100%; object-fit: cover;"
                                                  onerror="this.onerror=null; this.src='/path/to/fallback-image.jpg';"
                                                >
                                              <% } else { %>
                                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 100%; height: 100%;">
                                                  <%= brand.brandName.charAt(0).toUpperCase() %>
                                                </div>
                                              <% } %>
                                            </div>
                                          </td>
                                        <td>
                                            <% if (brand.isBlocked) { %>
                                                <span class="badge rounded-pill alert-danger">Blocked</span>
                                            <% } else { %>
                                                <span class="badge rounded-pill alert-success">Active</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (!brand.isBlocked) { %>
                                                <a href="/admin/blockBrand?id=<%= brand._id %>" class="btn btn-danger text-white">Block</a>
                                            <% } else { %>
                                                <a href="/admin/unBlockBrand?id=<%= brand._id %>" class="btn btn-success text-white">Unblock</a>
                                            <% } %>
                                            <a href="/admin/deleteBrand?id=<%= brand._id %>" class="btn btn-danger text-white" onclick="return confirmDelete()">Delete</a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</section>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this brand?");
    }
</script>
