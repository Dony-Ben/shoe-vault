
<div class="content-header row">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="content-title card-title">Customers</h2>
    </div>
</div>

<header class="card-header text-center mb-20">
    <form action="/admin/customers" method="get" class="d-inline">
        <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px; margin-left: 230px;">
            <input type="text" class="form-control border-0 rounded-pill" placeholder="Search customers..." name="search">
            <button class="btn border-0" type="submit">Search</button>
        </div>
    </form>
</header>

<div class="right mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col"><b>Name</b></th>
                <th scope="col"><b>Email</b></th>
                <!-- <th scope="col"><b>Phone No</b></th> -->
                <th scope="col"><b>Action</b></th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < data.length; i++) { %>
                <tr>
                    <td><%= data[i].name %></td>
                    <td><%= data[i].email %></td>
                    <!-- <td><%= data[i].phone %></td> -->
                    <td>
                        <% if (data[i].isblocked === false) { %> 
                            <button class="btn btn-danger" style="width: 80px;">
                                <a href="/admin/blockCustomer?id=<%= data[i]._id %>" class="text-white" style="text-decoration: none;">Block</a>
                            </button>
                        <% } else { %>
                            <button class="btn btn-success" style="width: 80px;">
                                <a href="/admin/UnblockCustomer?id=<%= data[i]._id %>" class="text-white" style="text-decoration: none;">Unblock</a>
                            </button> 
                        <% } %>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<div class="container mt-3">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>
<style>
    /* Container for the main content */
.content-header {
    margin-bottom: 30px;
}

/* Title styling */
.content-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #333;
}

/* Header for the search form */
.card-header {
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* Input group styling for search form */
.input-group {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

/* Search input field */
.form-control {
    border-radius: 50px;
    padding-left: 15px;
    padding-right: 15px;
    border: 1px solid #ccc;
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 10px rgba(0, 123, 255, 0.2);
}

/* Button styling */
.btn {
    border-radius: 50px;
    padding: 10px 20px;
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* Table styling */
.table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 30px;
}

.table th,
.table td {
    padding: 12px 15px;
    text-align: left;
}

.table th {
    background-color: #f7f7f7;
    color: #333;
    font-weight: 600;
}

.table td {
    background-color: #fff;
    color: #555;
}

/* Row hover effect */
.table tbody tr:hover {
    background-color: #f1f1f1;
}

/* Action buttons */
.btn-danger, .btn-success {
    font-size: 0.9rem;
    border-radius: 20px;
    padding: 8px 15px;
}

.btn-danger {
    background-color: #dc3545;
    border: none;
}

.btn-danger:hover {
    background-color: #c82333;
}

.btn-success {
    background-color: #28a745;
    border: none;
}

.btn-success:hover {
    background-color: #218838;
}

/* Pagination styling */
.pagination {
    justify-content: center;
    padding-top: 20px;
}

.page-item.active .page-link {
    background-color: #007bff;
    border-color: #007bff;
    color: #fff;
}

.page-item .page-link {
    border-radius: 50px;
    padding: 8px 16px;
    font-size: 1rem;
    color: #007bff;
    transition: all 0.3s ease;
}

.page-item .page-link:hover {
    background-color: #f1f1f1;
    text-decoration: none;
}

.page-item.disabled .page-link {
    color: #ccc;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

/* Small adjustments for mobile responsiveness */
@media (max-width: 768px) {
    .input-group {
        flex-direction: column;
        margin-left: 0;
        margin-right: 0;
    }

    .content-title {
        font-size: 1.5rem;
    }

    .table th, .table td {
        padding: 10px;
    }

    .pagination {
        margin-top: 20px;
    }
}

</style>
