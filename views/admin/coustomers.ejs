<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .main-content {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-top: 2rem;
        }

        .content-title {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        .search-form {
            background-color: #f1f3f5;
            border-radius: 30px;
            padding: 0.5rem 1rem;
        }

        .search-form input {
            border: none;
            background-color: transparent;
            color: #495057;
        }

        .search-form button {
            background-color: #007bff;
            color: white;
            border-radius: 30px;
            padding: 0.375rem 1rem;
        }

        .table {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }

        .table thead {
            background-color: #007bff;
            color: white;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        .btn-action {
            border-radius: 20px;
            padding: 0.375rem 1rem;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .pagination {
            justify-content: center;
        }

        .page-link {
            color: #007bff;
            border-radius: 50%;
            margin: 0 5px;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }
    </style>
</head>
<%- include('../partials/admin/leyout.ejs') %>

    <body>
        <div class="container">
            <div class="main-content">
                <div class="content-header">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="content-title">Customer Management</h2>
                        <form action="/admin/customers" method="get" class="search-form">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search customers..." name="search">
                                <button class="btn" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i=0; i < data.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%= data[i].firstname %>
                                        </td>
                                        <td>
                                            <%= data[i].email %>
                                        </td>
                                        <td>

                                            <% if (data[i].isblocked===false) { %>
                                                <a href="#" class="btn btn-danger btn-action"
                                                    onclick="confirmAction('/admin/blockCustomer?id=<%= data[i]._id %>', 'Are you sure you want to block this customer?')">
                                                    <i class="fas fa-user-lock me-2"></i>Block
                                                </a>
                                                <% } else { %>
                                                    <a href="#" class="btn btn-success btn-action"
                                                        onclick="confirmAction('/admin/unblockCustomer?id=<%= data[i]._id %>', 'Are you sure you want to unblock this customer?')">
                                                        <i class="fas fa-user-check me-2"></i>Unblock
                                                    </a>
                                                    <% } %>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination">
                            <% for(let i=1;i<=totalPages; i++){ %>
                                <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function confirmAction(url, message) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: message,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes',
                    customClass: {
                        popup: 'small-swal-popup'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = url;
                    }
                });
            }
            const style = document.createElement('style');
            style.innerHTML = `
                .small-swal-popup {
                    width: 300px !important;
                }
            `;
            document.head.appendChild(style);
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>