<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoe Vault - Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Playfair+Display:wght@400;700&display=swap"
        rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#1d1716',
                        secondary: '#402a23',
                        accent: '#FFD700',
                        light: '#F9F5F4',
                    },
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                        serif: ['Playfair Display', 'serif'],
                    },
                    animation: {
                        'fade-in': 'fadeIn 1s ease-out',
                        'slide-up': 'slideUp 1s ease-out',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' },
                        },
                        slideUp: {
                            '0%': { opacity: '0', transform: 'translateY(50px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        },
                    },
                }
            }
        }
    </script>

</head>
<%- include('../partials/user/header.ejs') %>

    <body class="font-sans bg-light text-secondary">
        <section class="relative overflow-hidden min-h-screen">
            <img src="/image/Banner.webp" alt="Banner"
                class="absolute inset-0 w-full h-full object-cover animate-fade-in">
            <div
                class="container mx-auto text-center relative z-10 flex flex-col items-center justify-center min-h-screen">
                <h1 class="text-5xl font-bold text-white mb-4 drop-shadow-lg animate-slide-up">Welcome to Shoe Vault
                </h1>
                <p class="text-xl text-white mb-8 drop-shadow-md animate-slide-up" style="animation-delay: 0.3s;">Step
                    into Style and Comfort</p>
                <a href="/shop"
                    class="inline-block px-6 py-3 text-red-900 bg-white  font-semibold rounded-full transition animate-slide-up"
                    style="animation-delay: 0.6s;">
                    Shop Now →
                </a>
            </div>
        </section>

        <!-- Trending Products -->
        <section class="py-16 bg-light">
            <div class="container mx-auto px-4">
                <h2 class="text-4xl font-bold text-center mb-12 font-serif text-black">Trending Products</h2>
                <main class="flex-1 p-4">
                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                        <% if (Array.isArray(products) && products.length> 0) { %>
                            <% products.slice(0, 8).forEach((product)=> { %>
                                <div onclick="goToDetail('<%= product._id %>')"
                                    class="rounded-2 shadow-md bg-white overflow-hidden hover:shadow-lg transition-shadow duration-300 cursor-pointer"
                                    data-price="<%= product.salePrice %>" data-name="<%= product.productName %>"
                                    data-category="<%= product.category ? product.category._id : '' %>"
                                    data-brand="<%= product.brands ? product.brands.brandName : '' %>"
                                    data-sizes="<%= (product.sizes || []).join(',') %>">

                                    <div class="aspect-[4/3] w-full">
                                        <img class="h-full w-full object-cover" src="<%= product.productImage[0] %>"
                                            alt="">
                                    </div>

                                    <div class="p-4">
                                        <h1 class="text-lg font-semibold text-gray-800 truncate mb-2">
                                            <%= product.productName %>
                                        </h1>

                                        <div class="flex justify-between items-center mb-2">
                                            <h1
                                                class="text-sm font-medium text-gray-600 border border-gray-300 rounded-md px-2 py-0.5">
                                                Sizes: <%= product.sizes.join(" ") %>
              </h1>
              <h1 class=" text-sm font-medium text-gray-600 border border-gray-300 rounded-md px-2 py-0.5">
                                                    Brand: <%= product.brands.brandName %>
                                            </h1>
                                        </div>

                                        <p class="text-sm text-gray-500 line-clamp-2">
                                            <%= product.description.split(' ').splice(0,15).join(' ') %>
            </p>

            <div class="flex justify-between items-center mt-3">
              <h1 class="text-xl font-semibold text-gray-800">₹ <%= product.salePrice %></h1>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-span-full text-center">
        <canvas id="dotlottie-canvas" style="width: 300px; height: 300px;"></canvas>
        <p class="text-secondary font-medium text-xl">
          No products available at the moment. Please check back later!
        </p>
      </div>
    <% } %>
  </div>
</main>
            </div>
        </section>
        <section class="relative mb-16">
            <img src="/image/Bannershop.webp" alt="Banner Image" class="w-full h-full object-cover rounded-lg">
            <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center text-white">
                </div>
            </div>
        </section>
    </body>
    <%- include('../partials/user/footer.ejs') %>
<script>
      function goToDetail(productId) {
    window.location.href = `/productDetails/${productId}`;
  }
</script>
</html>