<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoe Vault - Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Playfair+Display:wght@400;700&display=swap"
        rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#1d1716',
                        secondary: '#402a23',
                        accent: '#FFD700',
                        light: '#F9F5F4',
                    },
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                        serif: ['Playfair Display', 'serif'],
                    }
                }
            }
        }
    </script>
    <style>
        /* Custom Animations */
        @keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(50px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in-up {
            animation: fadeInUp 0.8s ease-out;
        }

        .animate-on-scroll {
            opacity: 1;
            transform: translateY(30px);
            transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }

        .animate-on-scroll.is-visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Glassmorphism Styles */
        .glass {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Button Effects */
        .modern-btn {
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

        .modern-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 0;
            height: 100%;
            background: rgba(255, 255, 255, 0.3);
            transition: width 0.4s ease;
            z-index: -1;
        }

        .modern-btn:hover::before {
            width: 100%;
        }

    </style>

</head>
<%- include('../partials/user/header.ejs') %>


    <body class="font-sans bg-light text-secondary">
        <section class="bg-black text-black   ht py-48 relative overflow-hidden"
            style="background-image: url('/image/Banner.jpg');">
            <div class="container mx-auto text-center relative z-10">
                <a href="#"
                    class="modern-btn bg-black text-light py-3 px-8 rounded-full text-lg font-medium hover:bg-opacity-90 transition duration-300 animate-fade-in-up"
                    style="animation-delay: 0.4s;">Explore Now</a>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-secondary to-transparent"></div>
        </section>

        <!-- Trending Products -->
        <section class="py-16 bg-light">
            <div class="container mx-auto px-4">
                <h2 class="text-4xl font-bold text-center mb-12 font-serif text-black">Trending Products</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    <% if (Array.isArray(products) && products.length> 0) { %>
                        <% products.slice(0, 4).forEach((product)=> { %>
                            <div class="animate-on-scroll" data-price="<%= product.salePrice %>"
                                data-name="<%= product.productName %>"
                                data-category="<%= product.category?._id?.toString() %>">
                                <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition duration-300 product-card overflow-hidden <%= !product.quantity ? 'opacity-60' : '' %>">

                                    <% if (product.offer) { %>
                                        <span class="absolute top-2 left-2 z-10 px-2 py-1 text-xs font-semibold text-white rounded-md <%= (product.offerType && product.offerType === 'percentage') ? 'bg-blue-600' : 'bg-red-600' %>">
                                            <%= product.offer %>
                                        </span>
                                        <% } %>
                                            <% if (!product.quantity) { %>
                                                <span class="absolute top-2 right-2 z-10 px-2 py-1 text-xs font-semibold text-white bg-red-600 rounded-md">Out of Stock</span>
                                                <% } %>

                                                    <a href="/productDetails?product=<%= product._id %>" class="block">
                                                        <img src="<%= product.productImage[0] %>"
                                                            class="w-full h-48 object-cover <%= !product.quantity ? 'grayscale' : '' %>"
                                                            alt="<%= product.productName %>">

                                                        <div class="p-4 text-center">
                                                            <h5 class="text-lg font-semibold mb-2 text-black line-clamp-2">
                                                                <%= product.productName %>
                                                            </h5>
                                                            <p class="text-sm text-gray-500 mb-1">
                                                                <% if (product.brands && product.brands.brandName) { %>
                                                                    <%= product.brands.brandName %>
                                                                        <% } else { %>
                                                                            No Brand
                                                                            <% } %>
                                                            </p>
                                                            <% if (product.originalPrice && product.salePrice < product.originalPrice) { %>
                                                                <p class="text-sm text-gray-400 line-through mb-1">
                                                                    ₹<%= product.originalPrice %>
                                                                </p>
                                                                <% } %>
                                                                    <p class="text-lg font-bold text-black">₹<%= product.salePrice %></p>
                                                        </div>
                                                    </a>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="col-span-full text-center">
                                        <p class="text-secondary font-medium text-xl">No products available at the moment. Please check back later!</p>
                                    </div>
                                    <% } %>
                </div>
            </div>
        </section>
        <section class="relative mb-16">
            <img src="/image/banner-2.jpg" alt="Banner Image" class="w-full h-64 object-cover rounded-lg">
            <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center text-white">
                </div>
            </div>
        </section>
    </body>
    <%- include('../partials/user/footer.ejs') %>

</html>