<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoe Vault home Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Playfair+Display:wght@400;700&display=swap"
        rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#1d1716',
                        secondary: '#402a23',
                        accent: '#FFD700',
                        light: '#F9F5F4',
                    },
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                        serif: ['Playfair Display', 'serif'],
                    }
                }
            }
        }
    </script>
    <style>
        /* Custom Animations */
        @keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(50px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in-up {
            animation: fadeInUp 0.8s ease-out;
        }

        .animate-on-scroll {
            opacity: 1;
            transform: translateY(30px);
            transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }

        .animate-on-scroll.is-visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Glassmorphism Styles */
        .glass {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Button Effects */
        .modern-btn {
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

        .modern-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 0;
            height: 100%;
            background: rgba(255, 255, 255, 0.3);
            transition: width 0.4s ease;
            z-index: -1;
        }

        .modern-btn:hover::before {
            width: 100%;
        }

        row {
            padding: 20px;
        }
    </style>

</head>
<%- include('../partials/user/header.ejs') %>


    <body class="font-sans bg-light text-secondary">
        <section class="bg-black text-black   ht py-48 relative overflow-hidden"
            style="background-image: url('/image/Banner.jpg');">
            <div class="container mx-auto text-center relative z-10">
                <a href="#"
                    class="modern-btn bg-black text-light py-3 px-8 rounded-full text-lg font-medium hover:bg-opacity-90 transition duration-300 animate-fade-in-up"
                    style="animation-delay: 0.4s;">Explore Now</a>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-secondary to-transparent"></div>
        </section>

        <!-- Trending Products -->
        <section class="py-16 bg-light">
            <div class="container mx-auto">
                <h2 class="text-4xl font-bold text-center mb-12 font-serif text-black">Trending Products</h2>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                    <% if (Array.isArray(products) && products.length> 0) { %>
                        <% products.slice(0, 4).forEach((product)=> { %>
                            <div class="col animate-on-scroll" data-price="<%= product.salePrice %>"
                                data-name="<%= product.productName %>" data-category="<%= product.category?._id?.toString() %>">
                                <div class="card h-100 glass border-0 shadow-md hover:shadow-lg transition duration-300  product-card <%= !product.quantity ? 'out-of-stock' : '' %>">

                                    <% if (product.offer) { %>
                                        <span
                                            class="badge position-absolute top-0 start-0 m-2 
                                            <%= (product.offerType && product.offerType === 'percentage') ? 'offer-percentage' : 'offer-flat' %>">
                                            <%= product.offer %>
                                        </span>
                                    <% } %>
                                    <% if (!product.quantity) { %>
                                        <span class="badge position-absolute top-0 end-0 m-2 bg-danger" style="z-index:2;">Out of Stock</span>
                                    <% } %>

                                    <a href="/productDetails?product=<%= product._id %>" class="block">
                                        <img src="<%= product.productImage[0] %>" class="card-img-top rounded-top w-100 object-cover <%= !product.quantity ? 'out-of-stock-img' : '' %>"
                                            style="max-height:220px;min-height:160px;" alt="<%= product.productName %>">

                                        <div class="card-body text-center">
                                            <h5 class="card-title text-lg font-semibold mb-2 text-black">
                                                <%= product.productName %>
                                            </h5>
                                            <p class="text-sm text-gray-500 mb-1">
                                                <% if (product.brands && product.brands.brandName) { %>
                                                    <%= product.brands.brandName %>
                                                <% } else { %>
                                                    No Brand
                                                <% } %>
                                            </p>
                                            <% if (product.originalPrice && product.salePrice < product.originalPrice) { %>
                                                <p class="card-text text-muted mb-1">
                                                    <del>₹<%= product.originalPrice %></del>
                                                </p>
                                            <% } %>
                                            <p class="card-text text-accent font-bold mb-4">₹<%= product.salePrice %></p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        <% }) %>
                                <% } else { %>
                                    <div class="col-12 text-center">
                                        <p class="text-secondary font-medium text-xl">No products available at the
                                            moment.
                                            Please check back later!</p>
                                    </div>
                                    <% } %>
                </div>
            </div>

        </section>
        <!-- Banner Image Section -->
        <section class="relative mb-16"></section>
        <img src="/image/banner-2.jpg" alt="Banner Image" class="w-full h-64 object-cover">
        <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center text-light">
            </div>
        </div>
        </section>
    </body>
    <%- include('../partials/user/footer.ejs') %>

</html>