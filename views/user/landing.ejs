<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoe Vault</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Playfair+Display:wght@400;700&display=swap"
        rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '1d1716',
                        secondary: '#000000 ',
                        accent: '#000000',
                        light: '#F9F5F4',
                    },
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                        serif: ['Playfair Display', 'serif'],
                    }
                }
            }
        }
    </script>
    <style>
        /* Custom Animations */
        @keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(50px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in-up {
            animation: fadeInUp 0.8s ease-out;
        }

        .animate-on-scroll {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }

        .animate-on-scroll.is-visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Glassmorphism Styles */
        .glass {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Button Effects */
        .modern-btn {
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

        .modern-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 0;
            height: 100%;
            background: rgba(255, 255, 255, 0.3);
            transition: width 0.4s ease;
            z-index: -1;
        }

        .modern-btn:hover::before {
            width: 100%;
        }

        .badge.bg-danger {
            background-color: #dc3545 !important;
            color: #fff;
            font-weight: 600;
            font-size: 0.95rem;
            border-radius: 6px;
            padding: 4px 10px;
            position: absolute;
            right: 8px;
            top: 8px;
            z-index: 2;
        }
    </style>
</head>
<%- include('../partials/user/header.ejs') %>

    <body class="font-sans bg-gray-300 text-secondary">

        <!-- Hero Section -->
      <section class="bg-black text-black relative overflow-hidden flex items-center justify-center" style="height:110vh;">
    <video autoplay loop muted playsinline
        class="absolute inset-0 w-full h-full object-cover hidden md:block"
        style="filter: brightness(1.3);">
        <source src="<%= banner.videoUrl %>" type="video/mp4">
    </video>
    <div class="container mx-auto text-center relative z-10 flex flex-col items-center justify-center h-full">
        <h1 class="text-5xl font-bold text-black mb-20 animate-fade-in-up">
            <%= banner.title %>
        </h1>
        <p class="text-xl text-black mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
            <%= banner.subtitle %>
        </p>
    </div>
</section>
        <!-- Trending Products -->
        <section class="py-16 bg-gray-300">
            <div class="container mx-auto px-4">
                <h2 class="text-4xl font-bold text-center mb-12 font-serif text-black k">
                    Trending Products
                    <span
                        class="absolute bottom-0 left-0 w-full h-1 transform scale-x-50 transition-transform duration-300 group-hover:scale-x-100"></span>
                </h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    <% if (Array.isArray(products) && products.length> 0) { %>
                        <% products.slice(0, 8).forEach((product)=> { %>
                            <div class="group">
                                <div class="bg-light rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                                    <a href="/productDetails/<%=product._id%>" class="block">
                                        <div class="relative overflow-hidden rounded-t-lg">
                                            <% if (!product.quantity) { %>
                                                <span class="badge position-absolute top-0 end-0 m-2 bg-danger"
                                                    style="z-index:2; position:absolute; right:8px; top:8px; background:#dc3545; color:#fff; padding:4px 10px; border-radius:6px; font-weight:600; font-size:0.95rem;">
                                                    Out of Stock
                                                </span>
                                                <% } %>
                                                    <img src="<%= product.productImage[0] %>"
                                                        class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
                                                        alt="<%= product.productName %>">
                                        </div>
                                        <div class="p-4">
                                            <h5 class="text-lg font-semibold mb-2 text-gray-800 truncate">
                                                <%= product.productName %>
                                            </h5>
                                            <p class="text-sm text-gray-500 mb-1">
                                                <% if (product.brands && product.brands.brandName) { %>
                                                    <%= product.brands.brandName %>
                                                        <% } else { %>
                                                            No Brand
                                                            <% } %>
                                            </p>
                                            <p class="text-gray-800 truncate font-bold mb-4">â‚¹<%= product.salePrice %>
                                            </p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="col-span-full text-center">
                                        <p class="text-gray-600 font-medium text-xl">No products available at the
                                            moment. Please check back later!</p>
                                    </div>
                                    <% } %>
                </div>

            </div>
        </section>

        <section class="w-full m-0 p-0 mb-6">
            <img src="<%= banner.imageUrl %>" alt="Banner" class="w-full object-cover" style="height:350px;">
        </section>
        <div class="mb-40"></div>

        <%- include('../partials/user/footer.ejs') %>

            <script>
                let lastScrollY = 0;
                const navbar = document.getElementById('navbar');

                window.addEventListener('scroll', () => {
                    const currentScrollY = window.scrollY;

                    // Hide the navbar on scroll down and show on scroll up
                    if (currentScrollY > lastScrollY && currentScrollY > 50) {
                        navbar.classList.add('hidden'); // Add hidden class
                    } else {
                        navbar.classList.remove('hidden'); // Remove hidden class
                    }

                    lastScrollY = currentScrollY; // Update last scroll position
                });

                // Scroll animations
                const elements = document.querySelectorAll('.animate-on-scroll');
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('is-visible');
                        }
                    });
                }, { threshold: 0.1 });

                elements.forEach(el => observer.observe(el));
            </script>

    </body>

</html>