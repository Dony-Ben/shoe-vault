<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoe Vault</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {   
                        primary: '1d1716',
                        secondary: '#000000 ',
                        accent: '#000000',
                        light: '#F9F5F4',
                    },
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                        serif: ['Playfair Display', 'serif'],
                    }
                }
            }
        }
        </script>
    <style>
        /* Custom Animations */
        @keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(50px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .animate-fade-in-up {
            animation: fadeInUp 0.8s ease-out;
        }

        .animate-on-scroll {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }
        .animate-on-scroll.is-visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Glassmorphism Styles */
        .glass {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Button Effects */
        .modern-btn {
            position: relative;
            overflow: hidden;
            z-index: 1;
        }
        .modern-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 0;
            height: 100%;
            background: rgba(255, 255, 255, 0.3);
            transition: width 0.4s ease;
            z-index: -1;
        }
        .modern-btn:hover::before {
            width: 100%;
        }
    </style>
</head>
<body class="font-sans bg-light text-secondary">

    <!-- Navbar -->
    <nav class="bg-transparent p-4 fixed w-full z-10 transition-all duration-300 ease-in-out" id="navbar">
        <div class="container mx-auto flex justify-between items-center">
            <a href="#" class="text-2xl font-serif font-bold text-black">Shoe Vault</a>
            <ul class="flex space-x-6">
                <li><a href="/home" class="text-light hover:text-accent transition duration-300">Home</a></li>
                <li><a href="/shop" class="text-light hover:text-accent transition duration-300">SHOP</a></li>
                <li><a href="/about" class="text-light hover:text-accent transition duration-300">ABOUT</a></li>
                <li><a href="/login" class="text-light hover:text-accent transition duration-300">LOGIN</a></li>
                <li><a href="/signup" class="text-light hover:text-accent transition duration-300">SIGNUP</a></li>


            </ul>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="bg-black text-black   ht py-48 relative overflow-hidden"
        style="background-image: url('/image/Banner.jpg');">
 <div class="container mx-auto text-center relative z-10">
            <!-- <h1 class="text-6xl font-serif font-bold mb-6 animate-fade-in-up">Experience the Elegance of Shoe Vault</h1> -->
            <p class="text-xl mb-12 animate-fade-in-up" style="animation-delay: 0.2s;">
                Discover exclusive products crafted for modern lifestyles.
            </p>
            <a href="#" class="modern-btn bg-black text-light py-3 px-8 rounded-full text-lg font-medium hover:bg-opacity-90 transition duration-300 animate-fade-in-up" style="animation-delay: 0.4s;">Explore Now</a>
        </div>
        <div class="absolute inset-0 bg-gradient-to-t from-secondary to-transparent"></div>
    </section>

    <!-- Trending Products -->
    <section class="py-16 bg-light">
        <div class="container mx-auto px-4">
          <h2 class="text-4xl font-bold text-center mb-12 font-serif text-black k">
            Trending Products
            <span class="absolute bottom-0 left-0 w-full h-1 transform scale-x-50 transition-transform duration-300 group-hover:scale-x-100"></span>
          </h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            <% if (Array.isArray(products) && products.length > 0) { %>
                <% products.slice(0, 8).forEach((product)=> { %>
                    <div class="group">
                  <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                    <a href="/productDetails?product=<%=product._id%>" class="block">
                      <div class="relative overflow-hidden rounded-t-lg">
                        <img 
                          src="<%= product.productImage[0] %>" 
                          class="w-full h-auto object-cover transition-transform duration-300 group-hover:scale-105" 
                          alt="<%= product.productName %>"
                        >
                      </div>
                      <div class="p-4">
                        <h5 class="text-lg font-semibold mb-2 text-gray-800 truncate"><%= product.productName %></h5>
                        <p class="text-gray-800 truncate font-bold mb-4">â‚¹<%= product.salePrice %></p>
                        <button class="w-40 py-1 px-2 bg-black text-white rounded-md hover:bg-gray-800 transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 mx-auto block">
                            Add to Cart
                          </button>
                          
                      </div>
                    </a>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <div class="col-span-full text-center">
                <p class="text-gray-600 font-medium text-xl">No products available at the moment. Please check back later!</p>
              </div>
            <% } %>
          </div>
        </div>
      </section>
    
    <!-- Footer -->
    <footer class="bg-black text-light py-12">
        <div class="container mx-auto text-center">
            <p class="mb-4">&copy; 2024 Shoe Vault. All rights reserved.</p>
            <div class="flex justify-center space-x-6">
                <a href="#" class="text-light hover:text-accent transition duration-300">Privacy Policy</a>
                <a href="#" class="text-light hover:text-accent transition duration-300">Terms of Service</a>
                <a href="#" class="text-light hover:text-accent transition duration-300">Contact Us</a>
            </div>
        </div>
    </footer>

    <script>
        let lastScrollY = 0; // Keep track of the last scroll position
        const navbar = document.getElementById('navbar');
    
        window.addEventListener('scroll', () => {
            const currentScrollY = window.scrollY;
    
            // Hide the navbar on scroll down and show on scroll up
            if (currentScrollY > lastScrollY && currentScrollY > 50) {
                navbar.classList.add('hidden'); // Add hidden class
            } else {
                navbar.classList.remove('hidden'); // Remove hidden class
            }
    
            lastScrollY = currentScrollY; // Update last scroll position
        });
    
        // Scroll animations
        const elements = document.querySelectorAll('.animate-on-scroll');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('is-visible');
                }
            });
        }, { threshold: 0.1 });
    
        elements.forEach(el => observer.observe(el));
    </script>
    
</body>
</html>
