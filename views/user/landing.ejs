<!DOCTYPE html>
<html lang="en">
    
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Shoe Vault</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Playfair+Display:wght@400;700&display=swap"
        rel="stylesheet">
        <script>
            function goToDetail(productId) {
            window.location.href = `/productDetails/${productId}`;
            }
            tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '1d1716',
                        secondary: '#000000 ',
                        accent: '#000000',
                        light: '#F9F5F4',
                    },
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                        serif: ['Playfair Display', 'serif'],
                    }
                }
            }
        }
    </script>
</head>
<%- include('../partials/user/header.ejs') %>

    <body class="font-sans bg-gray-300 text-secondary">

        <!-- Hero Section -->
      <section class="bg-black text-black relative overflow-hidden flex items-center justify-center" style="height:110vh;">
    <video autoplay loop muted playsinline
        class="absolute inset-0 w-full h-full object-cover hidden md:block"
        style="filter: brightness(1.3);">
        <source src="<%= banner.videoUrl %>" type="video/mp4">
    </video>
    <div class="container mx-auto text-center relative z-10 flex flex-col items-center justify-center h-full">
        <h1 class="text-5xl font-bold text-black mb-20 animate-fade-in-up">
            <%= banner.title %>
        </h1>
        <p class="text-xl text-black mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
            <%= banner.subtitle %>
        </p>
    </div>
</section>
        <section class="py-16 bg-gray-300">
            <div class="container mx-auto px-4">
                <h2 class="text-4xl font-bold text-center mb-12 font-serif text-black k">
                    Trending Products
                    <span
                        class="absolute bottom-0 left-0 w-full h-1 transform scale-x-50 transition-transform duration-300 group-hover:scale-x-100"></span>
                </h2>

        <main class="flex-1 p-4">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% if (Array.isArray(products) && products.length > 0) { %>
      <% products.slice(0, 8).forEach((product) => { %>
        <div onclick="goToDetail('<%= product._id %>')"
          class="rounded-2 shadow-md bg-white overflow-hidden hover:shadow-lg transition-shadow duration-300 cursor-pointer"
          data-price="<%= product.salePrice %>"
          data-name="<%= product.productName %>"
          data-category="<%= product.category ? product.category._id : '' %>"
          data-brand="<%= product.brands ? product.brands.brandName : '' %>"
          data-sizes="<%= (product.sizes || []).join(',') %>">

          <div class="aspect-[4/3] w-full">
            <img class="h-full w-full object-cover" src="<%= product.productImage[0] %>" alt="">
          </div>

          <div class="p-4">
            <h1 class="text-lg font-semibold text-gray-800 truncate mb-2">
              <%= product.productName %>
            </h1>

            <div class="flex justify-between items-center mb-2">
              <h1 class="text-sm font-medium text-gray-600 border border-gray-300 rounded-md px-2 py-0.5">
                Sizes: <%= product.sizes.join(" ") %>
              </h1>
              <h1 class="text-sm font-medium text-gray-600 border border-gray-300 rounded-md px-2 py-0.5">
                Brand: <%= product.brands.brandName %>
              </h1>
            </div>

            <p class="text-sm text-gray-500 line-clamp-2">
              <%= product.description.split(' ').splice(0,15).join(' ') %>
            </p>

            <div class="flex justify-between items-center mt-3">
              <h1 class="text-xl font-semibold text-gray-800">â‚¹ <%= product.salePrice %></h1>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-span-full text-center">
        <canvas id="dotlottie-canvas" style="width: 300px; height: 300px;"></canvas>
        <p class="text-secondary font-medium text-xl">
          No products available at the moment. Please check back later!
        </p>
      </div>
    <% } %>
  </div>
</main>


</div>
</section>

        <section class="w-full m-0 p-0 mb-6">
            <img src="<%= banner.imageUrl %>" alt="Banner" class="w-full object-cover" style="height:350px;">
        </section>
        <div class="mb-40"></div>
        
        <%- include('../partials/user/footer.ejs') %>
        
        <script>
            
                let lastScrollY = 0;
                const navbar = document.getElementById('navbar');

                window.addEventListener('scroll', () => {
                    const currentScrollY = window.scrollY;

                    if (currentScrollY > lastScrollY && currentScrollY > 50) {
                        navbar.classList.add('hidden');
                    } else {
                        navbar.classList.remove('hidden');
                    }

                    lastScrollY = currentScrollY;
                });

                const elements = document.querySelectorAll('.animate-on-scroll');
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('is-visible');
                        }
                    });
                }, { threshold: 0.1 });

                elements.forEach(el => observer.observe(el));
                </script>
    </body>
</html>