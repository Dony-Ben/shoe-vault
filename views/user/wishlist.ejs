<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wishlist</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f0f0;
            color: #333;
            line-height: 1.6;
            padding: 20px;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #6a1b9a;
            text-align: center;
            margin-bottom: 30px;
        }
        form {
            background-color: #e1bee7;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }
        input, button {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: none;
            border-radius: 4px;
        }
        button {
            background-color: #00897b;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #00695c;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            background-color: #e0f2f1;
            margin-bottom: 10px;
            padding: 15px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: transform 0.2s ease;
        }
        li:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        .remove-btn {
            background-color: #ff7043;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .remove-btn:hover {
            background-color: #f4511e;
        }
    </style>
</head>
<%- include('../partials/user/header.ejs') %>
<body>
    <div class="container">
        <h1>My Wishlist</h1>
        
        <form id="add-item-form">
            <input type="text" id="item-name" placeholder="Enter product name" required>
            <input type="number" id="item-price" placeholder="Enter price" step="0.01" required>
            <button type="submit">Add to Wishlist</button>
        </form>
        
        <ul id="wishlist">
            <% /*wishlistItems.forEach(function(item) {*/ %>
                <li>
                    <span><%= /*item.name %> - $<%= item.price.toFixed(2) */%></span>
                    <button class="remove-btn" data-id="<%=/* item.id */%>">Remove</button>
                </li>
            <%/* }); */%>
        </ul>
    </div>

    <script>
        document.getElementById('add-item-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const name = document.getElementById('item-name').value;
            const price = document.getElementById('item-price').value;
            
            // Here you would typically send this data to your server
            // For this example, we'll just add it to the list directly
            const wishlist = document.getElementById('wishlist');
            const li = document.createElement('li');
            li.innerHTML = `
                <span>${name} - $${Number(price).toFixed(2)}</span>
                <button class="remove-btn">Remove</button>
            `;
            wishlist.appendChild(li);
            
            // Clear the form
            document.getElementById('item-name').value = '';
            document.getElementById('item-price').value = '';
        });

        document.getElementById('wishlist').addEventListener('click', function(e) {
            if (e.target.classList.contains('remove-btn')) {
                e.target.closest('li').remove();
            }
        });
    </script>
</body>
</html>