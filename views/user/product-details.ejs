<style>
    /* Product Detail Page Styles */

/* Global Styles */
body {
  font-family: 'Poppins', sans-serif;
  color: #333;
  line-height: 1.6;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

/* Breadcrumb Styles */
.breadcrumb-wrap {
  background-color: #f7f8fa;
  padding: 15px 0;
  margin-bottom: 30px;
}

.breadcrumb {
  display: flex;
  align-items: center;
  font-size: 14px;
}

.breadcrumb a {
  color: #333;
  text-decoration: none;
}

.breadcrumb span {
  margin: 0 10px;
  color: #999;
}

/* Product Detail Styles */
.product-detail {
  margin-bottom: 50px;
}

.detail-gallery {
  position: relative;
  margin-bottom: 30px;
}

.zoom-icon {
  position: absolute;
  top: 10px;
  right: 10px;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 50%;
  padding: 5px;
  cursor: pointer;
}

.product-image-slider figure {
  margin: 0;
  overflow: hidden;
  border-radius: 10px;
}

.product-image-slider img {
  width: 100%;
  height: auto;
  transition: transform 0.3s ease;
}

.product-image-slider img:hover {
  transform: scale(1.05);
}

.slider-nav-thumbnails {
  display: flex;
  justify-content: center;
  margin-top: 15px;
}

.slider-nav-thumbnails img {
  width: 500px;
  height: 500px;
  object-fit: cover;
  border-radius: 5px;
  margin: 0 5px;
  cursor: pointer;
  border: 2px solid transparent;
  transition: border-color 0.3s ease;
}

.slider-nav-thumbnails img:hover,
.slider-nav-thumbnails img.active {
  border-color: #3BB77E;
}

/* Product Info Styles */
.detail-info {
  padding-left: 30px;
}

.title-detail {
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 15px;
}

.product-detail-rating {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.pro-details-brand {
  font-size: 14px;
}

.product-rate-cover {
  display: flex;
  align-items: center;
}

.product-rate {
  position: relative;
  height: 15px;
  width: 80px;
  background-color: #e7e7e7;
}

.product-rating {
  position: absolute;
  height: 100%;
  left: 0;
  top: 0;
  background-color: #fdc040;
}

.product-price-cover {
  margin-bottom: 20px;
}

.product-price {
  font-size: 24px;
  font-weight: 700;
  color: #3BB77E;
}

.old-price {
  text-decoration: line-through;
  color: #999;
  margin-left: 10px;
}

.save-price {
  background-color: #3BB77E;
  color: white;
  padding: 2px 8px;
  border-radius: 3px;
  font-size: 12px;
}

.short-desc {
  font-size: 14px;
  line-height: 1.8;
}

.product_sort_info {
  margin-bottom: 30px;
}

.product_sort_info ul {
  padding: 0;
  list-style: none;
}

.product_sort_info li {
  margin-bottom: 10px;
  display: flex;
  align-items: center;
}

.product_sort_info i {
  color: #3BB77E;
  margin-right: 10px;
}

/* Quantity and Add to Cart Styles */
.detail-extralink {
  display: flex;
  align-items: center;
  margin-top: 30px;
}

.detail-qty {
  display: flex;
  align-items: center;
  border: 1px solid #e5e5e5;
  border-radius: 5px;
  margin-right: 20px;
}

.qty-down,
.qty-up {
  padding: 5px 10px;
  cursor: pointer;
  user-select: none;
}

.qty-val {
  padding: 5px 10px;
  min-width: 30px;
  text-align: center;
}

.button-add-to-cart {
  background-color: #3BB77E;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.button-add-to-cart:hover {
  background-color: #2a9d8f;
}

.action-btn {
  background-color: #f7f8fa;
  color: #333;
  border: none;
  padding: 10px;
  border-radius: 50%;
  margin-left: 10px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.action-btn:hover {
  background-color: #e5e5e5;
}

/* Product Meta Styles */
.product-meta {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #e5e5e5;
  list-style: none;
  padding-left: 0;
}

.product-meta li {
  margin-bottom: 10px;
  font-size: 14px;
}

.in-stock {
  color: #3BB77E;
  font-weight: 600;
}

/* Responsive Styles */
@media (max-width: 768px) {
  .detail-info {
    padding-left: 0;
    margin-top: 30px;
  }

  .product-detail-rating {
    flex-direction: column;
    align-items: flex-start;
  }

  .product-rate-cover {
    margin-top: 10px;
  }

  .detail-extralink {
    flex-direction: column;
    align-items: flex-start;
  }

  .detail-qty {
    margin-bottom: 20px;
  }
}


