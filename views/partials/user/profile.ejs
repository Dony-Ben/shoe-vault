<style>
      .hamburger-menu {
        cursor: pointer;
        padding: 15px;
        position: fixed;
        top: 10px;
        left: 10px;
        z-index: 1000;
    }

    .bar {
        width: 25px;
        height: 3px;
        background-color: #333;
        margin: 5px 0;
        transition: 0.4s;
    }

    .sidebar {
        width: 250px;
        height: 100%;
        background-color: #f8f9fa;
        position: fixed;
        top: 0;
        left: 0;
        padding: 20px;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        transition: 0.3s;
    }

    .sidebar-header {
        margin-bottom: 30px;
        text-align: center;
    }

    .menu-item {
        display: block;
        padding: 15px;
        color: #333;
        text-decoration: none;
        transition: 0.2s;
        margin-bottom: 10px;
    }

    .menu-item:hover {
        background-color: #e9ecef;
        border-radius: 5px;
    }

    .menu-item i {
        margin-right: 10px;
    }

    @media (max-width: 768px) {
        /* No need for .hamburger-menu here anymore */
        .sidebar {
            left: -250px;
        }

        .sidebar.active {
            left: 0;
        }
    }
</style>

<div class="hamburger-menu" onclick="toggleSidebar()">
    <div class="bar"></div>
    <div class="bar"></div>
    <div class="bar"></div>
</div>

<div class="sidebar" id="sidebar">
    <div class="sidebar-menu">
        <a href="/profile" class="menu-item">
            <i class="fas fa-user"></i>
            Profile
        </a>
        <a href="/address" class="menu-item">
            <i class="fas fa-map-marker-alt"></i>
            Address
        </a>
        <a href="/orders" class="menu-item">
            <i class="fas fa-shopping-bag"></i>
            Orders
        </a>
        <a href="/wallet" class="menu-item">
            <i class="fas fa-wallet"></i>
            Wallet
        </a>
    </div>
</div>

<script>
    function toggleSidebar() {
        document.getElementById('sidebar').classList.toggle('active');
    }
</script>